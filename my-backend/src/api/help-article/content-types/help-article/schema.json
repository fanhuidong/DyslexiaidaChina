{
  "kind": "collectionType",
  "collectionName": "help_articles",
  "info": {
    "singularName": "help-article",
    "pluralName": "help-articles",
    "displayName": "HelpArticle"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Description": {
      "type": "text"
    },
    "Content": {
      "type": "blocks"
    },
    "Cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "Adult",
        "Teenager",
        "Educator"
      ],
      "required": true
    }
  }
}
